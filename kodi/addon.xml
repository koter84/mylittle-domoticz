<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="service.presence.detector"
    name="Bluetooth LE Presence Detector"
    version="1.0.0"
    provider-name="Dennis Koot">
  <requires>
    <import addon="xbmc.python"              version="2.14.0"/>
  </requires>
  <extension point="xbmc.service"       library="service.py" start="login"/>
  <extension point="xbmc.python.script" library="script.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language/>
    <summary lang="en">Bluetooth Low-Energy Scanner for Presence Detection</summary>
    <description lang="en">This program does continual Bluetooth LE scans to detect presence, and can initiate a HTTP-GET when someone enters or leaves.</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=</forum>
    <source>https://github.com/koter84/presence_detector</source>
  </extension>
</addon>
